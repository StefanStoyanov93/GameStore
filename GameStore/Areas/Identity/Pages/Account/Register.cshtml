@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
	Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/GameStore.styles.css" asp-append-version="true" />
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-4 offset-sm-4">
				<div class="forma bg-dark">
					<hr />
					<div class="panel-heading">
						<div class="img"><img src="~/img/level_up__1_.png" class="center" height=48 width=48 /></div>
						<h4 class="pt-3 font-weight-bold text-white">Sign Up for a LevelUp Account</h4>
					</div>
					<div class="panel p-3">
						<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="form-floating text-light ">
								<input asp-for="Input.Username" class="form-control bg-dark text-light" autocomplete="displayname" aria-required="true" />
								<label asp-for="Input.Username" class="form-label"></label>
								<span asp-validation-for="Input.Username" class="text-danger"></span>
							</div>
							<div class="form-floating text-light">
								<input asp-for="Input.FirstName" class="form-control bg-dark text-light" autocomplete="firstname" aria-required="true" />
								<label asp-for="Input.FirstName" class="form-label"></label>
								<span asp-validation-for="Input.FirstName" class="text-danger"></span>
							</div>
							<div class="form-floating text-light">
								<input asp-for="Input.LastName" class="form-control bg-dark text-light" autocomplete="lastname" aria-required="true" />
								<label asp-for="Input.LastName" class="form-label"></label>
								<span asp-validation-for="Input.LastName" class="text-danger"></span>
							</div>
							<div class="form-floating text-light">
								<select asp-for="Input.CountryId" class="form-control bg-dark text-light">
									@foreach (var countries in Model.Input.Countries)
									{
										<option value="@countries.Id">@countries.Name</option>
									}
								</select>
								<label asp-for="Input.CountryId" class="form-label"></label>
								<span asp-validation-for="Input.CountryId" class="small text-danger"></span>
							</div>
							<div class="form-floating text-light">
								<input asp-for="Input.BirthDate" class="form-control bg-dark text-light" autocomplete="birthdate" aria-required="true" />
								<label asp-for="Input.BirthDate" class="form-label"></label>
								<span asp-validation-for="Input.BirthDate" class="text-danger"></span>
							</div>
							<div class="form-floating text-light">
								<input asp-for="Input.Email" class="form-control bg-dark text-light" autocomplete="username" aria-required="true" />
								<label asp-for="Input.Email" class="form-label"></label>
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>
							<div class="form-floating text-light">
								<input asp-for="Input.Password" class="form-control bg-dark text-light" autocomplete="new-password" aria-required="true" />
								<label asp-for="Input.Password" class="form-label"></label>
								<span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>
							<div class="form-floating text-light">
								<input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-light" autocomplete="new-password" aria-required="true" />
								<label asp-for="Input.ConfirmPassword" class="form-label"></label>
								<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
							</div>
							<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Sign Up!</button>
							<div class="text-center pt-4 text-muted">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Sign In</a> </div>
						</form>
					</div>

				</div>
			</div>
		</div>
	</div>
</body>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
