@model GamesDetailsListModel

@{
	ViewData["Title"] = "Details | " + @Model.Name;
}

<div class="container-fluid">
	<h2>@Model.Name</h2>
	<div class="row" style="float-right">
		<img src=@Model.ImageUrl alt="">
		<div class="bg-white">
			<p>
				@Model.Description
			</p>
		</div>
	</div>
	<div style="float-left">
		<p>
			@Model.Developer
		</p>
		<p>
			@Model.Publisher
		</p>
	</div>
</div>