<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/_LoginPartial.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/GameStore.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/img/level_up__1_.png" height="36" width="36" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">

						@if (User.IsInRole("DataManager"))
						{
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="Manager" asp-controller="Store" asp-action="All">All</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="Manager" asp-controller="Store" asp-action="AddGame">Add Game</a>
							</li>

						}
						else
						{
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Store" asp-action="Browse">Store</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Collection" asp-action="All">My Collection</a>
							</li>
						}
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-white bg-dark">
		<div class="container">
			@DateTime.UtcNow.Year, LevelUp Game Store, Inc. All rights reserved.
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
